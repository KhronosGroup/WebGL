    <mirrors href="http://www.khronos.org/registry/gles/extensions/OES/OES_texture_float_linear.txt"
             name="OES_texture_half_float_linear">
    </mirrors>

    <features>
      <feature>
        Expands upon the <a href="../OES_texture_half_float/">OES_texture_half_float</a>
        extension by allowing support for <code>LINEAR</code> magnification filter and
        <code>LINEAR</code>, <code>NEAREST_MIPMAP_LINEAR</code>, <code>LINEAR_MIPMAP_NEAREST</code>,
        and <code>LINEAR_MIPMAP_LINEAR</code> minification filters.
      </feature>
    </features>
  </overview>

  <idl xml:space="preserve">
[Exposed=(Window,Worker), LegacyNoInterfaceObject]
interface OES_texture_half_float_linear { };</idl>

